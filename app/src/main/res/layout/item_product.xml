<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="158dp"
        android:layout_height="190dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/productImageView"
                android:layout_width="142dp"
                android:layout_height="85dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_add"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/productNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productImageView" />

            <TextView
                android:id="@+id/productPriceTextView"
                android:text="18000"
                android:textFontWeight="400"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:textColor="#5458EA"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productNameTextView"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/Sign"
                android:text="$"
                android:textFontWeight="400"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:textColor="#5458EA"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/productPriceTextView"
                app:layout_constraintTop_toBottomOf="@id/productNameTextView"
                android:layout_marginTop="5dp"
                android:layout_marginStart="4dp"/>
            <ImageView
                android:id="@+id/heart"
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:scaleType="centerCrop"
                android:src="@drawable/vector"
                android:layout_marginTop="7dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/productPriceTextView" />
            <TextView
                android:id="@+id/Sign2"
                android:text="1M"
                android:textFontWeight="400"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:textColor="#C1C1C1"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/heart"
                app:layout_constraintTop_toTopOf="@id/heart"
                android:layout_marginStart="4dp"/>

            <ImageView
                android:id="@+id/dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/combo_shape"
                android:layout_marginTop="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toTopOf="@id/heart" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
